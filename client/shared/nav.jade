template(name='userNav')
  section.user-nav
    div.timestamp Current Date: #{ CurrentDate }
    button
      a(href='/users') Back
    button
      a(href='/users/#{ _id }') Profile
    button
      a(href='/users/#{ _id }/candidates') Candidates
    button
      a(href='/users/#{ _id }/previous_candidates') Previous Candidates
    button
      a(href='/users/#{ _id }/connections') Connections
    button
      a(href='/users/#{ _id }/edit') Edit User
    img.small-avatar(src=profilePhotoUrl)